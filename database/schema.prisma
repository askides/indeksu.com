generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id          String    @id @default(cuid())
  email       String    @unique
  password    String
  is_verified Boolean   @default(false)
  created_at  DateTime? @default(now())
  updated_at  DateTime? @updatedAt

  // I hate non-lowercased columns.
  @@map("users")
}
